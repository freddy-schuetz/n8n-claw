# ============================================================
# n8n-greg — Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# --- n8n ---
N8N_URL=http://localhost:5678           # Public n8n URL
N8N_INTERNAL_URL=http://172.17.0.1:5678 # n8n URL from inside Docker network
N8N_API_KEY=your_n8n_api_key            # Settings → API in n8n UI

# --- Supabase (Self-Hosted) ---
SUPABASE_URL=http://your-server:8000    # Supabase Kong gateway URL
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_role_key

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your_bot_token       # From @BotFather
TELEGRAM_CHAT_ID=your_chat_id           # Your Telegram user ID

# --- Anthropic ---
ANTHROPIC_API_KEY=your_anthropic_key    # claude-sonnet-4.x recommended

# --- Optional: External Search ---
BRAVE_API_KEY=your_brave_key            # For MCP Builder API docs search
# SERP_API_KEY=your_serp_key            # Alternative to Brave

# --- Optional: Nextcloud CalDAV ---
NEXTCLOUD_URL=https://your-nextcloud-instance
NEXTCLOUD_USER=your_user
NEXTCLOUD_PASS=your_password

# --- Optional: Vexa (Meeting Intelligence) ---
VEXA_URL=http://localhost:8056
VEXA_API_KEY=your_vexa_api_key
